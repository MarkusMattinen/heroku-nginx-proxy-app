worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
	worker_connections 768;
}


http {
	map $http_upgrade $connection_upgrade {
		default upgrade;
		'' close;
	}

	types_hash_max_size 2048;
	include mime.types;
	server {
		listen <%= ENV['PORT'] %>;
		server_name _;

		return 301 <%= ENV['PROXY_PROTO'] %>://$host:<%= ENV['PROXY_PORT'] %>$request_uri;
	}
}
